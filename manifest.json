{
	"manifest_version": 2,
	
	"name": "VP Posts Filter",
  
	"version": "1.0",
  
	"description": "Позволяет блокировать посты ВК в соответствии с заданным фильтром (c) 2008-2016 EasyCoding",
	
	"options_page": "options/options.html",


	 "content_scripts": [
	    {
	      "matches": ["*://vk.com/*"],
	      "js": ["js/jquery.js", "js/functions.js", "background/vk.js"]
	    }
  	],

	 "permissions": [
	   "storage"
	],
  
	"browser_action": {
        "default_title": "Включить расширение",
        "default_popup": "popup/popup.html"
	}
}